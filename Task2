#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<string> tasks;
    vector<bool> done;
    int choice;

    while (true) {
        cout << "\n--- TO-DO LIST MENU ---\n";
        cout << "1. Add Task\n2. View Tasks\n3. Mark Task Completed\n4. Remove Task\n5. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;
        cin.ignore();

        if (choice == 1) {
            string task;
            cout << "Enter task: ";
            getline(cin, task);
            tasks.push_back(task);
            done.push_back(false);
        }
        else if (choice == 2) {
            for (int i = 0; i < tasks.size(); i++)
                cout << i + 1 << ". " << tasks[i]
                     << " [" << (done[i] ? "Completed" : "Pending") << "]\n";
        }
        else if (choice == 3) {
            int n;
            cout << "Task number to mark completed: ";
            cin >> n;
            if (n > 0 && n <= tasks.size()) done[n - 1] = true;
        }
        else if (choice == 4) {
            int n;
            cout << "Task number to remove: ";
            cin >> n;
            if (n > 0 && n <= tasks.size()) {
                tasks.erase(tasks.begin() + n - 1);
                done.erase(done.begin() + n - 1);
            }
        }
        else if (choice == 5) {
            break;
        }
        else {
            cout << "Invalid choice!";
        }
    }
    return 0;
}
